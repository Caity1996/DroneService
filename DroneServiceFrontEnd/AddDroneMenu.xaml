<Window x:Class="DroneServiceFrontEnd.AddDroneMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DroneServiceFrontEnd"
        mc:Ignorable="d"
        Title="AddDroneMenu" Height="450" Width="800">
    <Grid>
        <Label x:Name="ClientNameLabel" Content="Client Name:" HorizontalAlignment="Left" Margin="92,48,0,0" VerticalAlignment="Top" Width="87"/>
        <TextBox x:Name="ClientNameTxt" HorizontalAlignment="Left" Margin="184,48,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="232" Height="34"/>
        <RadioButton x:Name="Regular" Content="Regular" HorizontalAlignment="Left" Margin="184,254,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="Express" Content="Express" HorizontalAlignment="Left" Margin="331,254,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.3,-0.9"/>
        <Label Content="Drone Model:" HorizontalAlignment="Left" Margin="92,100,0,0" VerticalAlignment="Top" Width="87" Height="34"/>
        <TextBox x:Name="DroneModelTxt" HorizontalAlignment="Left" Margin="184,100,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="232" Height="34"/>

    </Grid>
</Window>
