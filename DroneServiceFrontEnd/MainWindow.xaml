<Window x:Class="DroneServiceFrontEnd.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DroneServiceFrontEnd"
        mc:Ignorable="d"
        Title="DroneService" MaxHeight="470" MaxWidth="800">
    
    <StackPanel Orientation="Vertical">

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">

            <StackPanel>

                <ListView x:Name="RegularDroneList" HorizontalAlignment="Left" Height="210" VerticalAlignment="Top" Width="150" Margin="50" SelectionChanged="RegularDroneList_SelectionChanged">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Regular Drones" DisplayMemberBinding="{Binding ServiceTag}" Width="150"/>
                        </GridView>
                    </ListView.View>
                </ListView>

            </StackPanel>


            <StackPanel>

                <ListView x:Name="ExpressDroneList" HorizontalAlignment="Center" Height="210" VerticalAlignment="Top" Width="150"  Margin="50">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Express Drones" DisplayMemberBinding="{Binding ServiceTag}" Width="150"/>
                        </GridView>
                    </ListView.View>
                </ListView>

            </StackPanel>

            <StackPanel x:Name="___No_Name_">

                <ListView x:Name="CompletedDroneLst" HorizontalAlignment="Left" Height="210" Width="150"  Margin="50">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Completed Drones" DisplayMemberBinding="{Binding ServiceTag}" Width="150"/>
                            <GridViewColumn/>
                        </GridView>
                    </ListView.View>
                </ListView>

            </StackPanel>
            
        </StackPanel>


        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">


            <Button  x:Name="RegDequeueBtn" Content="Dequeue Regular Drone" HorizontalAlignment="Center" VerticalAlignment="Top" Height="46" Width="204" Margin="0,0,50,0" Click="RegDequeueBtn_Click"/>

            <Button  x:Name="AddDroneBtn" Content="Add Drone" HorizontalAlignment="Center"  VerticalAlignment="Top" Height="46" Width="204" Margin="0,0,50,0" Click="AddDroneBtn_Click"/>

            <Button  x:Name="ExDequeueBtn" Content="Dequeue Express Drone" HorizontalAlignment="Center"  VerticalAlignment="Top" Height="46" Width="204" Click="ExDequeueBtn_Click"/>

        </StackPanel>




        <StatusBar x:Name="StatusBar1" Height="27" Width="800" Margin="0,50,0,0" VerticalAlignment="Bottom">
            <TextBlock x:Name="Status1Txt" Text="System Status:"/>
        </StatusBar>
        
    </StackPanel>
    

    
</Window>
